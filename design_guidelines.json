    "spacing": {
      "container": "max-w-[1400px] mx-auto px-6 md:px-12",
      "section_gap": "py-24 md:py-32",
      "component_gap": "gap-8 md:gap-12"
    },
    "grids": {
      "tetris": "grid grid-cols-1 md:grid-cols-12 gap-6",
      "bento": "grid grid-cols-1 md:grid-cols-3 gap-6 auto-rows-[300px]"
    },
    "z_index": {
      "nav": "z-50",
      "modal": "z-60",
      "cursor": "z-[100]",
      "content": "z-10",
      "background": "z-0"
    }
  },
  "components": {
    "buttons": {
      "style": "sharp edges or pill-shaped, no default rounded-md",
      "interaction": "transform active:scale-95 transition-transform duration-200"
    },
    "cards": {
      "style": "bg-[#14141A] border border-white/5 hover:border-[#F7E600]/50 transition-colors duration-300",
      "tilt_effect": "Must use framer-motion useMotionValue for 3D tilt on hover"
    },
    "hero": {
      "style": "Fullscreen 100vh, parallax image background, text bottom-left alignment",
      "animation": "Text stagger reveal, image scale-down on scroll"
    },
    "navigation": {
      "style": "Floating glassmorphism header: backdrop-blur-md bg-black/50 border-b border-white/10"
    }
  },
  "motion": {
    "library": "Framer Motion + GSAP (ScrollTrigger) + Lenis (Smooth Scroll)",
    "rules": [
      "No generic 'transition: all'",
      "Use spring animations for interactions",
      "Stagger children elements",
      "Parallax on all background images"
    ],
    "smooth_scroll": "Implement Lenis for luxury 'weighty' scroll feel"
  },
