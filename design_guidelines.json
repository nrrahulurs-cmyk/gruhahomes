      "headings": "Syne, sans-serif",
      "body": "Manrope, sans-serif",
      "mono": "JetBrains Mono, monospace"
    },
    "scaling": {
      "h1": "text-6xl md:text-8xl font-bold tracking-tighter leading-[0.9]",
      "h2": "text-4xl md:text-6xl font-semibold tracking-tight",
      "h3": "text-2xl md:text-4xl font-medium",
      "body": "text-base md:text-lg leading-relaxed text-gray-300",
      "label": "text-xs font-bold uppercase tracking-[0.2em] text-accent"
    },
    "installation": "Import fonts via Google Fonts in index.css: @import url('https://fonts.googleapis.com/css2?family=Manrope:wght@300;400;500;700&family=Syne:wght@400;600;700;800&display=swap');"
  },
  "colors": {
    "palette": {
      "primary": "#F7E600",
      "primary_foreground": "#000000",
      "background": "#0B0B0F",
      "surface": "#14141A",
      "surface_highlight": "#1C1C24",
      "text_main": "#FAFAFA",
      "text_muted": "#A1A1AA",
      "accent_gold": "#D4AF37",
      "success": "#22C55E",
      "error": "#EF4444"
    },
    "usage": {
      "body_bg": "bg-[#0B0B0F]",
      "card_bg": "bg-[#14141A] border border-white/5",
