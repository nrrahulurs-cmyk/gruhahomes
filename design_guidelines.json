{
  "project_name": "Gruha Homes - A Place To Call Home",
  "design_philosophy": {
    "identity": "E1: The Anti-AI Designer",
    "core_principles": [
      "Fusion over Imitation: Architecture meets Cinema.",
      "Emotion First: Trust, Precision, Warmth.",
      "Content is King: Directed storytelling.",
      "Negative Space: Luxurious breathing room.",
      "Contrast: High-impact Yellow vs. Deep Black."
    ],
    "anti_patterns": [
      "No generic 'Inter' headings.",
      "No center-aligned everything.",
      "No purple/teal CTAs.",
      "No low-effort gradients."
